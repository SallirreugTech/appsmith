{
	"plugins": [
		"@ianvs/prettier-plugin-sort-imports"
	],
	"printWidth": 80,
	"tabWidth": 2,
	"useTabs": false,
	"semi": true,
	"singleQuote": false,
	"trailingComma": "all",
	"arrowParens": "always",
	"importOrder": [
		"^react$",
		"^react-dom$",
		"",
		"<THIRD_PARTY_MODULES>",
		"",
		"^@appsmith/.*$",
		"",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrderParserPlugins": [
		"typescript",
		"jsx",
		"decorators-legacy"
	],
	"overrides": [
		{
			"files": "**/*.test.{ts,tsx}",
			"options": {
				"importOrder": []
			}
		}
	]
}